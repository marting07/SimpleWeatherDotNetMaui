<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SimpleWeatherDotNetMaui.ViewModels"
             x:Class="SimpleWeatherDotNetMaui.MainPage"
             x:DataType="viewModels:MainViewModel">

    <StackLayout Padding="24" Spacing="16">
        <Label Text="SimpleWeather" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Enter city" Text="{Binding City}" />
        <ActivityIndicator IsRunning="{Binding IsLoading}" />
        <Label Text="{Binding Temperature}" FontSize="32" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
